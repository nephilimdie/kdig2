{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'VocMachine'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>VocMachine</h1>

<form class="form-horizontal">
    <fieldset>        
        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.name }}</col-sm->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Sigla</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.sigla }}</col-sm->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Remarks</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.remarks }}</col-sm->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Created</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.created|date('Y-m-d H:i:s') }}</col-sm->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isactive</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.isActive }}</col-sm->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Ispublic</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.isPublic }}</col-sm->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isdelete</label>
            <div class="controls">                <col-sm- class="input-xlarge uneditable-input">{{ entity.isDelete }}</col-sm->            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('vocmachine') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('vocmachine_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('vocmachine_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}