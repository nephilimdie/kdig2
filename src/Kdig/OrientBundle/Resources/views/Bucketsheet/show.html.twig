{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Bucketsheet'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Bucketsheet</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.id }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.name }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Remarks</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.remarks }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Created</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.created|date('Y-m-d H:i:s') }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Updated</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.updated|date('Y-m-d H:i:s') }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isactive</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isActive }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Ispublic</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isPublic }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isdelete</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isDelete }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isread</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isread }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isdrawn</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isdrawn }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isnumbered</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isnumbered }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isfiled</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isfiled }}</col-md->            </div>
        </div>        <div class="control-group">
            <label class="control-label">Isphotographed</label>
            <div class="controls">                <col-md- class="input-xlarge uneditable-input">{{ entity.isphotographed }}</col-md->            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('bucketsheet') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('bucketsheet_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('bucketsheet_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}