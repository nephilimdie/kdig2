{% extends app.request.xmlHttpRequest ? kdig.templates.full : kdig.templates.partial %}
{% block content %}
<div class="span1 left-menu">
    {% block content_left_menu %}
        {{ mopa_bootstrap_navbar('leftmenu') }}
        {{ mopa_bootstrap_navbar('vocsmenupottery') }}
    {% endblock content_left_menu %}
</div>
<div class="span11 center">
    {% block page_header %}
    <div class="page-header span12">
        {{ apy_breadcrumb_trail_render() }}
    </div>
    {% endblock page_header %}
    {% block content_content %}
        <div class="span12">
            <div class="control-group">
                <label class="control-label">Name</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.name }}</span>            </div>
            </div>        <div class="control-group">
                <label class="control-label">Remarks</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.remarks }}</span>            </div>
            </div>        <div class="control-group">
                <label class="control-label">Imagename</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.imageName }}</span>            </div>
            </div>        <div class="control-group">
                <label class="control-label">Created</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.created|date('Y-m-d H:i:s') }}</span>            </div>
            </div>        
        </div>
    {% endblock content_content %}
</div>
{% endblock content %}