{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Pottery'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<div class="row">

    <div class="span8">
        <h1>{{ 'views.index.list'|trans({'%entity%': 'Pottery'}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
    </div>
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="span2">
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>

    <div class="span12">
        <div id="filters" class="collapse">

            <form class="well" action="{{ path('pottery') }}" method="get" {{ form_enctype(filterForm) }}>
                {{ form_row(filterForm.id) }}
                {{ form_row(filterForm.remarks) }}
                {{ form_row(filterForm.created) }}
                {{ form_row(filterForm.updated) }}
                {{ form_row(filterForm.isActive) }}
                {{ form_row(filterForm.isPublic) }}
                {{ form_row(filterForm.isDelete) }}
                {{ form_row(filterForm.tcode) }}
                {{ form_row(filterForm.typecontext) }}
                {{ form_row(filterForm.outercolor) }}
                {{ form_row(filterForm.innercolor) }}
                {{ form_row(filterForm.fabriccolor) }}
                {{ form_row(filterForm.rimdiameter) }}
                {{ form_row(filterForm.rimwidth) }}
                {{ form_row(filterForm.wallwidth) }}
                {{ form_row(filterForm.maxwalldiameter) }}
                {{ form_row(filterForm.bottomwidth) }}
                {{ form_row(filterForm.height) }}
                {{ form_row(filterForm.basediameter) }}
                {{ form_row(filterForm.restored) }}
                {{ form_row(filterForm.datation) }}
                {{ form_rest(filterForm) }}

                <p>
                    <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
            </form>
        </div>
    </div>

    <div class="span12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Remarks</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Isactive</th>
            <th>Ispublic</th>
            <th>Isdelete</th>
            <th>Tcode</th>
            <th>Typecontext</th>
            <th>Outercolor</th>
            <th>Innercolor</th>
            <th>Fabriccolor</th>
            <th>Rimdiameter</th>
            <th>Rimwidth</th>
            <th>Wallwidth</th>
            <th>Maxwalldiameter</th>
            <th>Bottomwidth</th>
            <th>Height</th>
            <th>Basediameter</th>
            <th>Restored</th>
            <th>Datation</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pottery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.remarks }}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.isActive }}</td>
            <td>{{ entity.isPublic }}</td>
            <td>{{ entity.isDelete }}</td>
            <td>{{ entity.tcode }}</td>
            <td>{{ entity.typecontext }}</td>
            <td>{{ entity.outercolor }}</td>
            <td>{{ entity.innercolor }}</td>
            <td>{{ entity.fabriccolor }}</td>
            <td>{{ entity.rimdiameter }}</td>
            <td>{{ entity.rimwidth }}</td>
            <td>{{ entity.wallwidth }}</td>
            <td>{{ entity.maxwalldiameter }}</td>
            <td>{{ entity.bottomwidth }}</td>
            <td>{{ entity.height }}</td>
            <td>{{ entity.basediameter }}</td>
            <td>{{ entity.restored }}</td>
            <td>{{ entity.datation }}</td>
            <td>
        <a class="btn btn-mini" href="{{ path('pottery_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('pottery_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>

    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn btn-primary likepaginator" href="{{ path('pottery_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Pottery
        </a>
    </div>
    </div>

{% endblock %}