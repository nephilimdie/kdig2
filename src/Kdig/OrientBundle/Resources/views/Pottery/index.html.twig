{% block title %}
    {{ 'views.index.list'|trans({'%entity%': 'Pottery'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<div class="row-fluid">

    <div class="span12">
        {{ mopa_bootstrap_navbar('showmenupottery') }}    
    </div>
    <div class="span12">
        -- stats
    </div>

    <div class="span12">
    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Remarks</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Isactive</th>
            <th>Ispublic</th>
            <th>Isdelete</th>
            <th>Tcode</th>
            <th>Typecontext</th>
            <th>Outercolor</th>
            <th>Innercolor</th>
            <th>Fabriccolor</th>
            <th>Rimdiameter</th>
            <th>Rimwidth</th>
            <th>Wallwidth</th>
            <th>Maxwalldiameter</th>
            <th>Bottomwidth</th>
            <th>Height</th>
            <th>Basediameter</th>
            <th>Restored</th>
            <th>Datation</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pottery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.remarks }}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.isActive }}</td>
            <td>{{ entity.isPublic }}</td>
            <td>{{ entity.isDelete }}</td>
            <td>{{ entity.tcode }}</td>
            <td>{{ entity.typecontext }}</td>
            <td>{{ entity.outercolor }}</td>
            <td>{{ entity.innercolor }}</td>
            <td>{{ entity.fabriccolor }}</td>
            <td>{{ entity.rimdiameter }}</td>
            <td>{{ entity.rimwidth }}</td>
            <td>{{ entity.wallwidth }}</td>
            <td>{{ entity.maxwalldiameter }}</td>
            <td>{{ entity.bottomwidth }}</td>
            <td>{{ entity.height }}</td>
            <td>{{ entity.basediameter }}</td>
            <td>{{ entity.restored }}</td>
            <td>{{ entity.datation }}</td>
            <td>
        <a class="btn btn-mini" href="{{ path('pottery_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('pottery_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>

    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn btn-primary likepaginator" href="{{ path('pottery_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Pottery
        </a>
    </div>
    </div>

{% endblock %}