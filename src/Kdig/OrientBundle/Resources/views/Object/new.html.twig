{% block title %}
    {{ 'views.new.creation'|trans({'%entity%': 'Object'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translator.min.js') }}"></script>
<script type="text/javascript" src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'validators' }) }}"></script>
{{ JSFV(form) }}

{{ form_javascript(form) }}
{{ form_stylesheet(form) }}
<form id="objectform" class="" action="{{ path('object_create') }}" method="post" {{ form_enctype(form) }}>
    <div class="row-fluid">
        {{ form_widget(form) }}
        <p>
            <button type="submit" class="btn btn-success">{{ 'views.new.create'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </p>
    </div>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('object') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
</div>
<script type="text/javascript">
$(document).ready( function () {
    var formsave1 = new autosaveform({
            formid: 'objectform',
            pause: 2000 
    });
    var id_bucket  = $("#kdig_orientbundle_objecttype_preobject_bucket option:selected").val();
    var routegetdefault = Routing.generate('kdig_preobject_defaulttext', { id_bucket: id_bucket });
    getdefaultstringAjax(routegetdefault,'#kdig_orientbundle_objecttype_preobject_name','fill');

    $('#kdig_orientbundle_objecttype_preobject_bucket').change(function() {
        var id_bucket = $("#kdig_orientbundle_objecttype_preobject_bucket option:selected").val();
        var routegetdefault = Routing.generate('kdig_preobject_defaulttext', { id_bucket: id_bucket });
        getdefaultstringAjax(routegetdefault,'#kdig_orientbundle_objecttype_preobject_name','fill');
    });
});
</script>
{% endblock %}