{% block content %}
<div class="span1 left-menu">
    {% block content_left_menu %}
        {{ mopa_bootstrap_navbar('leftmenu') }}
        {{ mopa_bootstrap_navbar('vocsmenupottery') }}
    {% endblock content_left_menu %}
</div>
<div class="span11 center">
    {% block page_header %}
    <div class="page-header span12">
        {{ apy_breadcrumb_trail_render() }}
    </div>
    {% endblock page_header %}
    {% block content_content %}
        <div class="span12">
            <div class="span4">
                <div class="title-field">Campaign</div>
                <div class="controls">                
                    <span class="">{{ entity.site }}</span>            
                </div>
            </div>
            <div class="span4">
                <div class="title-field">Area</div>
                <div class="controls">                
                    <span class="">{{ entity.area }}</span>            
                </div>
            </div>
            <div class="span4">
                <div class="title-field">Name</div>
                <div class="controls">                
                    <span class="">{{ entity.typeus.name }} {{ entity.name }}</span>            
                </div>
            </div>
            <div class="span12">
                <div class="title-field">Remarks</div>
                <div class="controls">                
                    <span class="">{{ entity.remarks }}</span>            
                </div>
            </div>      
        </div>
    {% endblock content_content %}
</div>
{% endblock content %}