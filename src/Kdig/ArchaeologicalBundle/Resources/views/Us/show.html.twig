{% block title %}
    {{ 'views.show.show'|trans({'%entity%': 'Us'}, 'JordiLlonchCrudGeneratorBundle') }} - {{ entity.typeus.name }}{{ entity.name }}
{% endblock %}

{% block page %}

{{ mopa_bootstrap_navbar('showmenuus') }}    
<div class="row-fluid">
    <div class="span4">
        <div class="title-field">Campaign</div>
        <div class="controls">                
            <span class="">{{ entity.site }}</span>            
        </div>
    </div>
    <div class="span4">
        <div class="title-field">Area</div>
        <div class="controls">                
            <span class="">{{ entity.area }}</span>            
        </div>
    </div>
    <div class="span4">
        <div class="title-field">Name</div>
        <div class="controls">                
            <span class="">{{ entity.typeus.name }} {{ entity.name }}</span>            
        </div>
    </div>
    <div class="span12">
        <div class="title-field">Remarks</div>
        <div class="controls">                
            <span class="">{{ entity.remarks }}</span>            
        </div>
    </div>
</div>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('us') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('us_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('us_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}