{% block title %}
    {{ 'views.show.show'|trans({'%entity%': 'Us'}, 'JordiLlonchCrudGeneratorBundle') }} - {{ entity.typeus.name }}{{ entity.name }}
{% endblock %}

{% block page %}

{{ mopa_bootstrap_navbar('showmenuus') }}    
<div class="row-fluid">
    <div class="span4">
        <div class="title-field">Campaign</div>
        <div class="controls">                
            <span class="">{{ entity.site }}</span>            
        </div>
    </div>
    <div class="span4">
        <div class="title-field">Area</div>
        <div class="controls">                
            <span class="">{{ entity.area }}</span>            
        </div>
    </div>
    <div class="span4">
        <div class="title-field">Name</div>
        <div class="controls">                
            <span class="">{{ entity.typeus.name }} {{ entity.name }}</span>            
        </div>
    </div>
    <div class="span12">
        <div class="title-field">Remarks</div>
        <div class="controls">                
            <span class="">{{ entity.remarks }}</span>            
        </div>
    </div>
</div>
{% endblock %}