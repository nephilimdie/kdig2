{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Area</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Remarks</th>
                <td>{{ entity.remarks }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ entity.isActive }}</td>
            </tr>
            <tr>
                <th>Ispublic</th>
                <td>{{ entity.isPublic }}</td>
            </tr>
            <tr>
                <th>Isdelete</th>
                <td>{{ entity.isDelete }}</td>
            </tr>
            <tr>
                <th>Fromrefbucket</th>
                <td>{{ entity.fromrefbucket }}</td>
            </tr>
            <tr>
                <th>Torefbucket</th>
                <td>{{ entity.torefbucket }}</td>
            </tr>
            <tr>
                <th>Fromrefus</th>
                <td>{{ entity.fromrefus }}</td>
            </tr>
            <tr>
                <th>Torefus</th>
                <td>{{ entity.torefus }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('area') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('area_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('area_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
